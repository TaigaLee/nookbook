<%- include("../partials/header.ejs") %>

<% if (message) { %>
    <div class="message-box">
        <%= message %>
    </div>
<% } %>

<h3 class="find">Find an Item:</h3>
<form class="search">
	<label for="searchInfo">Find Item:</label>
	<input type="search" name="searchInfo" id="searchInfo" />
	<button>Search</button>
</form>

<div id="item-index">
    <div class='container'>
	<% searchResults.forEach( (result) => {%>
        <div class="row">
            <div class='col'><a href="/market/<%= result._id %>">
                <%= result.name %></a>
            </div>
            <div class='col'> <a href="/user/<%= result.user._id %>">
               <%= result.user.username %></a>
            </div>
            <div class='col'>$<%= result.price %></div>
        </div>
	<% }) %>
    </div>
</div>



<%- include("../partials/footer.ejs") %>
