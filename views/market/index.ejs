<%- include("../partials/header.ejs") %>

<h2>Welcome to the Marketplace!</h2>

<% if (message) { %>
    <div class="message-box">
        <%= message %>
    </div>
<% } %>

<% if (loggedIn) {%>
	<div>
		<a href="/market/new">Sell an Item</a>
	</div>
<% } %>


    <% items.forEach((item) => { %>
        <div class="item-for-sale">
            <div class="card">
                <div class="card-header">
                    <h4><a href="/market/<%= item.id %>"><%= item.name %></a></h4>        
                </div>
            <p>Seller: <a href="/user/<%= item.user.id %>"><%= item.user.username %></a></p>
            <p>For: <%= item.price %> Bells</p>
            </div>
        </div>
    <% }) %>


<%- include("../partials/footer.ejs")%>
